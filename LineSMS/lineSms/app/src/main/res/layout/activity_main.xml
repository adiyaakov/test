<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adiyaakovdevelopment.linesms.MainActivity">

    <RelativeLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/topView"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <Button

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/plus"
            android:id="@+id/activity_main_plusBtn"
            android:onClick="onAddBtnClicked"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activityMainRv"></android.support.v7.widget.RecyclerView>
</LinearLayout>
